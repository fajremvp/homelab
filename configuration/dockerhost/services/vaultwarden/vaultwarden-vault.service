[Unit]
Description=Vaultwarden (Injected by Vault)
Requires=docker.service
After=docker.service network-online.target

[Service]
Type=oneshot
RemainAfterExit=yes
WorkingDirectory=/opt/services/vaultwarden
ExecStart=/bin/bash /opt/services/vaultwarden/start-with-vault.sh
ExecStop=/usr/bin/docker compose down
Restart=on-failure
RestartSec=10s

[Install]
WantedBy=multi-user.target
