global:
  resolve_timeout: 5m

route:
  group_by: ['alertname']
  group_wait: 30s
  group_interval: 5m
  repeat_interval: 4h # Não fica spammando se o erro persistir
  receiver: 'ntfy'

receivers:
  - name: 'ntfy'
    webhook_configs:
      - url: 'http://ntfy:80/alertas_infra' # Tópico do Ntfy local
        send_resolved: true
        http_config:
          # Reusa a variável do prompt
          bearer_token: "{{ ntfy_token }}"
        max_alerts: 5
